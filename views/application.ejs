    <div class="row mt-5">

        <div class="col ">
            <div class="row mb-5">
                <h6>Last Institution Name</h6>
            </div>
            <div class="row">
                <p><%= application.lastinstitution%></p>
            </div>
        </div>
        <div class="col">
            <div class="row mb-5">
                <h6>Years he studied there</h6>
            </div>
            <div class="row">
                <p><%= application.yearsstudied%></p>
            </div>
        </div>
        <div class="col">
            <div class="row mb-5">
                <h6>Why he left </h6>
            </div>
            <div class="row">
                <p><%= application.whyyouleft%></p>
            </div>
        </div>
        <div class="col">
            <div class="row mb-5">
                <h6>Last degree he had</h6>
            </div>
            <div class="row">
                <p style="text-align: center;"><%= application.lastdegree%></p>
            </div>
        </div>
        <div class="col">
            <div class="row mb-5">
                <h6>Last degree's Percentage</h6>
            </div>
            <div class="row">
                <p style="text-align: center;"><%= application.percentageinlastdegree%></p>
            </div>
        </div>
    </div>
